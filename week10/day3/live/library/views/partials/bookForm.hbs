<input
  type="text"
  name="title"
  value="{{title}}"
  placeholder="Enter the title for the book"
/>
<input
  type="text"
  name="author"
  value="{{author}}"
  placeholder="Enter the author for the book"
/>
<input
  type="number"
  name="rating"
  value="{{rating}}"
  placeholder="Enter a rating for the book"
/>
<textarea
  name="description"
  placeholder="Enter some description for the book"
>{{description}}</textarea>